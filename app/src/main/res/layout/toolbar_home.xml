<?xml version="1.0" encoding="utf-8"?><androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/toolbar_home"    android:layout_width="match_parent"    android:layout_height="?attr/actionBarSize"    android:background="?gradientBg"    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"    app:contentInsetStart="0dp"    app:popupTheme="@style/AppTheme.PopupOverlay">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_centerHorizontal="true"        android:layout_gravity="center"        android:background="@color/colorPrimary"        android:focusableInTouchMode="true"        android:layoutDirection="locale"        android:orientation="vertical">        <ImageView            android:id="@+id/backButton"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_gravity="center"            android:padding="@dimen/_10sdp"            android:src="@drawable/round_arrow_back"            android:visibility="visible"            tools:ignore="ContentDescription"            app:tint="@color/colorGold" />        <androidx.appcompat.widget.AppCompatTextView            android:id="@+id/toolbarTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:textColor="@color/black"            tools:ignore="RelativeOverlap"            android:text="@string/home" />        <ImageView            android:id="@+id/btnCart"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_toStartOf="@id/btnMenu"            android:layout_gravity="center"            android:padding="@dimen/_8sdp"            android:src="@drawable/ic_cart"            android:visibility="visible"            tools:ignore="ContentDescription" />        <ImageView            android:id="@+id/btnMenu"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_alignParentEnd="true"            android:layout_gravity="center"            android:padding="@dimen/_8sdp"            android:src="@drawable/ic_menu"            android:visibility="visible"            tools:ignore="ContentDescription" />    </RelativeLayout></androidx.appcompat.widget.Toolbar>